<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/last_game_popup"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/gameTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_vertical_margin"
        android:background="@color/colorLastGame"
        android:text="TIC TAC TOE"
        android:textColor="@color/colorText"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gameTitle"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/gameInstructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_vertical_margin"
            android:text="Pick X or O (if you are X, the phone is O). The first player to get 3 marks in a row (up, down, across, or diagonally) is the winner!"
            android:textColor="@color/colorLastGame" />

        <TextView
            android:id="@+id/scoreInstructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/gameInstructions"
            android:padding="@dimen/activity_vertical_margin"
            android:text="For each round you win, you get 1 point!"
            android:textColor="@color/colorLastGame"/>

        <TextView
            android:id="@+id/livesInstructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/scoreInstructions"
            android:padding="@dimen/activity_vertical_margin"
            android:text="You must win or tie 3 times in a row to win the game!"
            android:textColor="@color/colorLastGame"/>
    </RelativeLayout>
</RelativeLayout>