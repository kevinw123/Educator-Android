<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_last_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLastGame"
    tools:context="com.group25.proj2.LastGameActivity">

    <RelativeLayout
        android:id="@+id/scoreAreaTTTPrompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_vertical_margin"
        android:background="@color/colorText" >

        <TextView
            android:id="@+id/scoreTTTPrompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorText"
            android:text="SCORE: 0"
            android:textColor="@color/colorLastGame" >
        </TextView>

        <TextView
            android:id="@+id/highscoreTTTPrompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorText"
            android:text="HIGHSCORE: 0"
            android:textColor="@color/colorLastGame"
            android:layout_alignParentRight="true">
        </TextView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <TextView
            android:id="@+id/tttXOPrompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"

            android:text="X OR O?"
            android:textColor="@color/colorText"
            android:textSize="@dimen/title_size"/>


        <LinearLayout
            android:id="@+id/tttXOPromptLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/tttX"
                    android:background="@color/colorText"
                    android:layout_width="150dip"
                    android:layout_height="150dip"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="X"
                    android:textSize="@dimen/title_size"
                    android:textColor="@color/colorLastGame"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/tttO"
                    android:background="@color/colorText"
                    android:layout_width="150dip"
                    android:layout_height="150dip"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="O"
                    android:textSize="@dimen/title_size"
                    android:textColor="@color/colorLastGame" />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
